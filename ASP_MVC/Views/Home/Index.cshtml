@{
    ViewData["Title"] = "Matrix Operations";
}

<h2>Select Matrix Size</h2>

<form asp-action="Index" method="post">
    <select name="size">
        <option value="3">3x3</option>
        <option value="6">6x6</option>
        <option value="9">9x9</option>
    </select>
    <button type="submit">Submit</button>
</form>
