@model ASP_MVC.Models.Movies.Movie

@{
    ViewData["Title"] = @Model.Title;
}

<h2>@Model.Title</h2>

<div class="row">
    <div class="col-md-4">
        <img src="https://image.tmdb.org/t/p/w500/@Model.PosterPath" class="img-fluid" alt="@Model.Title">
    </div>
    <div class="col-md-8">
        <p>@Model.Overview</p>
        <p><strong>Rating:</strong> @Model.VoteAverage</p>
    </div>
</div>
