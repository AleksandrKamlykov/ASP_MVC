@model ASP_MVC.Models.Movies.MovieResponse

@{
    ViewData["Title"] = "Popular Movies";
}

<h2>Popular Movies</h2>

<div class="row">
    @foreach (var movie in Model.Results)
    {
        <div class="col-md-3">
            <div class="card mb-4 shadow-sm">
                <img src="https://image.tmdb.org/t/p/w500/@movie.PosterPath" class="card-img-top" alt="@movie.Title">
                <div class="card-body">
                    <h5 class="card-title">@movie.Title</h5>
                    <p class="card-text">@movie.Overview</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href="@Url.Action("Details", "Movie", new { id = movie.Id })" class="btn btn-sm btn-outline-secondary">View</a>
                        </div>
                        <small class="text-muted">@movie.VoteAverage</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.Page ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", "Movie", new { page = i })">@i</a>
            </li>
        }
    </ul>
</nav>
